<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/frendsItemAvatar"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/frendsItemName"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/frendsItemName"
        android:layout_width="144dp"
        android:layout_height="26dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/frendsItemCapital"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frendsItemPlace"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/frendsItemAvatar"
        app:layout_constraintTop_toBottomOf="@+id/frendsItemName" />

    <TextView
        android:id="@+id/frendsItemCapital"
        android:layout_width="116dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>