<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PersonDialogFragmentConstraiLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:alpha="1"
    android:clickable="true"
    android:focusable="true"
    tools:context=".PersonDialog.PersonDialogFragment">

    <ProgressBar
        android:id="@+id/progressBarPersonDialog"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/personDialogConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/AddTofriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/black"
                android:clickable="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="отравить заявку"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAllCaps="false"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textviewCapital"
                app:strokeColor="@color/seriy"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/textviewCapital"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Капитал:"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/AvatarImageView"
                android:layout_width="165dp"
                android:layout_height="157dp"
                android:layout_marginTop="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_width="2dip"
                app:riv_corner_radius="30dip" />


            <TextView
                android:id="@+id/FiotextView"
                android:layout_width="363dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center|center_vertical"
                android:text="Иванов Иван Иванович "
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AvatarImageView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="126dp"
                android:layout_height="40dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center|start"
                android:text="Друзья:"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CityTextView" />

            <Button
                android:id="@+id/friendCaount"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="48dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:text="14"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CityTextView"
                app:strokeColor="@color/seriy"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/freindButton"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="48dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/poppins_semibold"

                android:text="14"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/friendCaount"
                app:strokeColor="@color/seriy"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/CityTextView"
                android:layout_width="171dp"
                android:layout_height="31dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Город"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FiotextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>